#wave {
  position: relative;
  text-align: left;
  width: 114px;
  margin-left: 3px;
  margin-right: auto;
  line-height: 9px;
  height: 20px;
  top: 25px;
  .dot {
    display:inline-block;
    width:3px;
    height:3px;
    border-radius:50%;
    margin-right:0px;
    background:#525252;
    animation: wave 1.3s linear infinite;

     &:nth-child(2) {
      animation-delay: -1.1s;
    }

     &:nth-child(3) {
      animation-delay: -0.9s;
    }
  }
}

@keyframes wave {
  0%, 60%, 100% {
    transform: initial;
  }

   30% {
    transform: translateY(-8px);
  }
}
