<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 class="modal-title" id="close-task-modal-title"><%= t 'user_dashboard.are_you_sure_want_close_call_task' %></h3>
        </div>

        <div class="modal-body">
            <p><%= t 'user_dashboard.select_task_result' %></p>
            <div class="select-task-result">
                <div class="radio select-task-result-negative">
                    <label>
                        <input name="task_result" value="negative" type="radio" data-bind="checked: selectedResult, includeDomElement: {observable: selectedResult, value: 'negative'}"/>
                        <%= I18n.t('user_dashboard.task_result.negative') %>
                    </label>
                </div>
                <div class="radio select-task-result-neutral">
                    <label class="checked">
                        <input name="task_result" value="neutral" type="radio" data-bind="checked: selectedResult, includeDomElement: {observable: selectedResult, value: 'neutral'}"/>
                        <%= I18n.t('user_dashboard.task_result.neutral') %>
                    </label>
                </div>
                <div class="radio select-task-result-positive">
                    <label>
                        <input name="task_result" value="positive" type="radio" data-bind="checked: selectedResult, includeDomElement: {observable: selectedResult, value: 'positive'}"/>
                        <%= I18n.t('user_dashboard.task_result.positive') %>
                    </label>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <a role="button" class="btn btn-default btn-sm" data-dismiss="modal"><%= t('user_dashboard.cancel') %> <span class="glyphicon glyphicon-remove"></span></a>
            <a role="button" class="btn btn-default btn-sm" data-bind="click: markAsDone" data-dismiss="modal"><%= t('user_dashboard.ok') %> <span class="glyphicon glyphicon-ok"></span></a>
        </div>
    </div>
</div>
