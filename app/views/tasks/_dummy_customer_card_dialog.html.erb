                    <div class="contact-card-customer-header">Company</div>
                    <div class="widget-head">
                        <ul>
                            <li class="active">
                                <a data-toggle="tab" href="#company_basic_info">Basic information</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#company_customers">Customers</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#company_tasks">Tasks</a>
                            </li>
