                            <div id="company_emails" class="tab-pane">
                            </div>

                            <!-- COMPANY CHATS HERE -->
                            <div id="company_chats" class="tab-pane">
                            </div>

                            <!-- COMPANY SMS HERE -->
                            <div id="company_sms" class="tab-pane">
                            </div>

                            <!-- COMPANY WEB FORMS HERE -->
                            <div id="company_web_forms" class="tab-pane">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
