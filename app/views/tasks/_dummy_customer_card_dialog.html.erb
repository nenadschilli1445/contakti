<div class="modal-dialog contact-card-modal-dialog">

    <div class="modal-content" id="customer-contact-card-modal-dialog">
        <div class="modal-header">
            <div class="contact-card-modal-header">
                <label>Contact Card</label>
                <button type="button" class="close contact-card-modal-header-button" data-dismiss="modal" aria-hidden="true">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </div>
        </div>


        <div class="modal-body" style="overflow-y: auto">
            <div class="styled-select contact-card-modal-type-select">
                <select type="text" id="contact-type-select">
                    <option value="company">Company</option>
                    <option value="customer">Customer</option>
                </select>
                <span class="caret"></span>
            </div>
