                            <li>
                                <a data-toggle="tab" href="#company_calls">Calls</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#company_emails">Email</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#company_chats">Chats</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#company_sms">SMS</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#company_web_forms">Web Forms</a>
                            </li>
                            -->
                        </ul>
                    </div>
                    <div class="widget-body">
                        <div class="tab-content">

                            <!-- COMPANY BASIC INFORMATION HERE -->
                            <div id="company_basic_info" class="tab-pane active">
                                <%= simple_form_for CustomerCompany.new, :html => {:class => 'form-horizontal'} do |f| %>
                                  <div class="row">
                                      <div class="col-md-12">
                                          <h3 class="contact-card-header">Basic Information</h3>
                                      </div>

                                      <div class="col-md-6">
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>Company Name</label>
                                                  <%= f.text_field :name, class: 'form-control' %>
                                              </div>
                                          </div>
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>First Name of Primary Contact Person</label>
                                                  <input type="text" class="form-control"/>
                                              </div>
                                          </div>

                                      </div>
                                      <div class="col-md-6">
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>Business Number</label>
                                                  <%= f.text_field :code, class: 'form-control' %>
                                              </div>
                                          </div>
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>Last Name of Primary Contact Person</label>
                                                  <input type="text" class="form-control"/>
                                              </div>
                                          </div>
                                      </div>

                                      <span class="contact-card-divider"></span>

                                      <div class="col-md-6">
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>Address</label>
                                                  <%= f.text_field :street_address, class: 'form-control' %>
                                              </div>
                                          </div>
                                      </div>
                                      <div class="col-md-6">
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>Postal code</label>
                                                  <%= f.text_field :zip_code, class: 'form-control' %>
                                              </div>
                                              <div class="input-group">
                                                  <label>City</label>
                                                  <%= f.text_field :city, class: 'form-control' %>
                                              </div>
                                          </div>
                                      </div>

                                      <span class="contact-card-divider"></span>

                                      <div class="col-md-6">
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>Email Address</label>
                                                  <%= f.text_field :email, class: 'form-control' %>
                                              </div>
                                          </div>
                                      </div>
                                      <div class="col-md-6">
                                          <div class="form-group margin-none innerB">
                                              <div class="input-group">
                                                  <label>Phone number</label>
                                                  <%= f.text_field :phone, class: 'form-control' %>
                                              </div>
                                          </div>
                                      </div>

                                      <span class="contact-card-divider"></span>

                                      <div class="col-md-12">
                                          <div class="form-group innerB contact-card-bs-save-button-div">
                                              <div class="input-group">
                                                  <button class="btn btn-default contact-card-bs-button" type="submit">
