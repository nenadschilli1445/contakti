                                                <div class="col-md-12">
                                                    <i data-bind="css: content_hidden ? css_arrow_down : css_arrow_up" class="fa"></i>
                                                    <div class="pull-left">
                                                        <span data-bind="css: icon_class" class="glyphicon contact-card-tasks-glyphicon"></span>
                                                        <span data-bind="text: name, click: $root.taskClicked" class="task-name-header"></span>
                                                    </div>
                                                    <span data-bind="text: date" class="pull-right"></span>
                                                </div>
                                                <div data-bind="visible: !content_hidden" class="col-md-12">
                                                    <div class="row">
                                                        <div class="col-md-12 contact-card-tasks-content-column">
                                                            <div>
                                                                <label for="date_created_span">Date created: </label><span data-bind="text: date" id="date_created_span"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 contact-card-tasks-content-column">
                                                            <div>
