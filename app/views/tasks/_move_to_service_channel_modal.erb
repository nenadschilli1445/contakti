
<script type="text/html" id="move_to_service_channel_template">
    <!-- Modal -->
    <div class="modal fade" id="move-to-service-channel" tabindex="-1" role="dialog" aria-labelledby="move-to-service-channel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"><%= I18n.t('user_dashboard.move_to_service_channel') %></h4>
                </div>
                <div class="modal-body">
                    <!-- ko ifnot: task().state() == 'ready' -->
                    <div class="styled-select">
                        <select id="move_to_service_channel" placeholder="<%= I18n.t('user_dashboard.move_to_service_channel') %>" data-bind="disabled: task().state == 'open', event: {change: moveToChannelChanged}">
                            <option value="" disabled selected><%= I18n.t('user_dashboard.move_to_service_channel') %></option>
                            <!-- ko foreach: UserDashboard.serviceChannels -->
                            <%# $parent.task() because foreach creates new context and task() is at $parent. %>
                            <!-- ko ifnot: Number($data.id) == Number($parent.task().data.service_channel_id) -->
                            <option data-bind="value: $data.id, text: $data.name">
                            </option>
                            <!-- /ko -->
                            <!-- /ko -->
                        </select>
                        <span class="caret"></span>
                    </div>
                    <!-- /ko -->
                    <!-- ko if: (task().data.media_channel != 'call' && task().state() == 'ready') -->
                    <a id="re-open" class="btn btn-default"><%= I18n.t('user_dashboard.task_actions.restart') %></a>
                    <!-- /ko -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn secondary-btn" data-dismiss="modal"><%= t('user_dashboard.cancel') %></button>
                    <button type="button" class="btn btn-default" data-bind="click: moveToChannel"><%= t('user_dashboard.ok') %></button>
                </div>
            </div>
        </div>
    </div>
</script>