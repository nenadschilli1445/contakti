<form id="sms_individual_sending_form">
  <input type="hidden" name="is_agent_console" value="true">
  <div class="row innerAll">
    <div class="styled-select form-group">
      <%= hidden_field_tag 'locale', locale %>
      <%= collection_select(nil, :service_channel_id, current_user.service_channels, :id, :name, { prompt: t('user_dashboard.please_select_service_channel') }, { class: 'sms_template_id single_sms_channel', id: 'service_channel_id' }) %>
      <span class="caret"></span>
    </div>
  </div>

  <div>
    <div class="styled-select form-group">
      <%= collection_select(nil, :id, @sms_templates, :id, :title, {prompt: t('service_channels.select_template')}, {class: 'sms_template_id'}) %>
      <span class="caret"></span>
    </div>
  </div>
  <div class="form-group">
    <input type="text" name="reply[to]" class="form-control" placeholder="<%= I18n.t('user_dashboard.phone_placeholder') %>" id="reply_from"/>
    <input type="hidden" name="reply[is_sms]" value="1"/>
  </div>
  <div class="form-group">
    <textarea class="form-control sms-message-input" name="message" placeholder="<%= t('user_dashboard.sms_message') %>"></textarea>
    <span class="sms-message-counter hide">0/0, 0 messages</span>
  </div>
  <div class="form-group">
    <button type="button" class="btn btn-default btn-sm pull-right"
            id="sms_individual_sending_submit_button" disabled>
      <%= t('user_dashboard.send') %>
    </button>
  </div>
  <div class="clearfix"></div>
</form>


