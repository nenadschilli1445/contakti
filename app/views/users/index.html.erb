<h3><%= t('users.index.users')%></h3>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= t('users.index.user_name')%></th>
      <th><%= t('users.index.email')%></th>
      <th><%= t('users.index.registered')%></th>
      <th><%= t('users.index.role')%></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button"><%= t('users.index.change_role')%></a>
        <%= render user %>
      </td>
      <td><%= link_to(t('users.index.delete_user'), user_path(user), :data => { :confirm => t('users.index.sure') }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
