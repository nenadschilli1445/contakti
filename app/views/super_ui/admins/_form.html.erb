<%= simple_form_for(@admin, url: @admin.persisted? ? resource_url : collection_url) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role_ids, as: :select,  collection: ::SuperAdminRole.all, value_method: :id, label: 'Type' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "#{f.object.new_record? ? 'Create Super Admin' : 'Update Super Admin'}" %>
  </div>
<% end %>
