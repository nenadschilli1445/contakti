<%= simple_form_for(@manager, url: @manager.persisted? ? resource_url : collection_url) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :title %>
    <%= f.input :mobile %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :company_id, collection: ::Company.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
