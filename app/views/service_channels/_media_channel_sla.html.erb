<%= fields_for "service_channel[#{prefix}_attributes]", media_channel, html: {id: 'media_channel_form'} do |f| %>
  <p><%= t('service_channels.alert_limits') %></p>
  <div class="form-group margin-none marginB10 col-sm-4 padding-none">
    <div class="input-group">
            <span class="input-group-addon padding-none no-min-width">
                <span class="yellow-box pull-left"></span>
            </span>
      <%= f.text_field :yellow_alert_days, :class => 'form-control' %>
      <span class="input-group-addon"><%= t('service_channels.days') %></span>
    </div>
  </div>
  <div class="form-group margin-none marginB10 col-md-4 col-sm-4 padding-none">
    <div class="input-group">
      <%= f.text_field :yellow_alert_hours, value: format_hours(media_channel.yellow_alert_hours), :class => 'form-control' %>
      <span class="input-group-addon"><%= t('service_channels.hours') %></span>
    </div>
  </div>
  <div class="form-group margin-none marginB10 col-md-4 col-sm-4 padding-none">
    <div class="input-group">
      <%= f.text_field :yellow_alert_minutes, value: sla_minutes(media_channel.yellow_alert_hours, media_channel.yellow_alert_minutes), :class => 'form-control' %>
      <span class="input-group-addon"><%= t('service_channels.minutes') %></span>
    </div>
  </div>
  <div class="clearfix"></div>
  <%= render partial: '/shared/field_error', locals: {record: media_channel, field: :yellow_alert_hours} %>
  <div class="form-group margin-none marginB10 col-sm-4 padding-none">
    <div class="input-group">
            <span class="input-group-addon padding-none no-min-width">
              <span class="red-box pull-left"></span>
            </span>
      <%= f.text_field :red_alert_days, :class => 'form-control' %>
      <span class="input-group-addon"><%= t('service_channels.days') %></span>
    </div>
  </div>
  <div class="form-group margin-none marginB10 col-sm-4 padding-none">
    <div class="input-group">
      <%= f.text_field :red_alert_hours, value: format_hours(media_channel.red_alert_hours), :class => 'form-control' %>
      <span class="input-group-addon"><%= t('service_channels.hours') %></span>
    </div>
  </div>
  <div class="form-group margin-none marginB10 col-sm-4 padding-none">
    <div class="input-group">
      <%= f.text_field :red_alert_minutes, value: sla_minutes(media_channel.red_alert_hours, media_channel.red_alert_minutes), :class => 'form-control' %>
      <span class="input-group-addon"><%= t('service_channels.minutes') %></span>
    </div>
  </div>
  <div class="clearfix"></div>
  <%= render partial: '/shared/field_error', locals: {record: media_channel, field: :red_alert_hours} %>
<% end %>
