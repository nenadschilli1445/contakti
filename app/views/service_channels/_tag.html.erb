<div class="row">
  <div class="col-md-6">
    <h4><%= t("service_channels.sip_setting") %></h4><br>
  </div>
  <div class="col-md-6">
    <%#= form_tag create_skills_service_channels_path, method: :post, remote: true do %>
      <div class="input-group">
        <div class="styled-select">
          <% if @all_skills.present? %>
            <%= select_tag :tag, options_for_select(@all_skills.pluck(:name)), include_blank: I18n.t('tags.please_select'), class: "form-control skillTagSelected" %>
          <% end %>
        </div>
        <div class="input-group-btn">
          <button type="button" class="btn btn-default btn-sm form-control submitServiceChanel "><%= I18n.t('user_dashboard.save') %>
            <span class="glyphicon glyphicon-ok"></span>
          </button>
        </div>
      </div>
    <%# end %>
  </div>
  <div class="col-md-12">
    <div style="background-color: #ffffff">
      <table class="table">
        <thead>
        <tr>
          <th><%= I18n.t('tags.skills') %></th>
          <th><%= I18n.t('user_dashboard.tasks') %></th>
          <th class="pull-right"><%= I18n.t('tags.delete') %></th>
        </tr>
        </thead>
        <tbody id="skillListData">
          <%= render "skill_lists" %>
        </tbody>
      </table>
    </div>
  </div>
</div>